<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="439" Width="796">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="radio interface.jpeg" Stretch="Fill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="399*"/>
            <ColumnDefinition Width="397*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Switch" Content="Off" HorizontalAlignment="Left" Margin="234,0,0,0" VerticalAlignment="Center" Height="47" Width="123" Click="offButton" Background="#FFFF0A0A" Grid.Column="1"/>
        <Button x:Name="On" Content="On" HorizontalAlignment="Left" Margin="39,0,0,0" VerticalAlignment="Center" Height="47" Width="123" Click="onButton" Background="#FFFF0A0A"/>
        <TextBox x:Name="radioStatus" HorizontalAlignment="Left" Margin="307,10,0,0" Text="Radio is off" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" Height="163" TextChanged="RadioOff_TextChanged" Grid.ColumnSpan="2" FontSize="30"/>
        <Button Content="Channel 1" HorizontalAlignment="Left" Margin="86,317,0,0" VerticalAlignment="Top" Height="40" Width="84" Click="channel_1" Background="#FFFF0A0A"/>
        <Button Content="Channel 2" HorizontalAlignment="Left" Margin="261,317,0,0" VerticalAlignment="Top" Height="40" Width="84" Click="channel_2" Background="#FFFF0A0A"/>
        <Button Content="Channel 3" HorizontalAlignment="Left" Margin="49,317,0,0" VerticalAlignment="Top" Height="40" Width="84" Click="channel_3" Grid.Column="1" Background="#FFFF0A0A"/>
        <Button Content="Channel 4" HorizontalAlignment="Left" Margin="221,317,0,0" VerticalAlignment="Top" Height="40" Width="84" Click="channel_4" Grid.Column="1" Background="#FFFF0A0A"/>
        <Button x:Name="upVolume" Content="increase volume" Margin="75,10,211,359" Click="upVolume"/>
        <Button x:Name="downVolume" Content="decrease volume" Margin="75,69,211,300" Click="downVolume"/>



    </Grid>
</Window>
